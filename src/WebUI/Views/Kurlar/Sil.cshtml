@model KurVM
@{
    ViewData["Title"] = "Kur Sil";
}



<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h1 class="card-title text-danger">Kur Kaydını Silmek İstediğinize Emin misiniz?</h1>
            </div>
            <div class="card-body">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="Adi" class="col-md-4 col-sm-12"> </label>
                    <div class="col-md-8 col-sm-12">
                        <input asp-for="Adi" class="form-control" disabled />
                        <span asp-validation-for="Adi" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Aciklama" class="col-md-4 col-sm-12"></label>
                    <div class="col-md-8 col-sm-12">
                        <input asp-for="Aciklama" class="form-control" disabled />
                        <span asp-validation-for="Aciklama" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="HDersSaati" class="col-md-4 col-sm-12"></label>
                    <div class="col-md-8 col-sm-12">
                        <input asp-for="HDersSaati" class="form-control" disabled />
                        <span asp-validation-for="HDersSaati" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Devamsizlik" class="col-md-4 col-sm-12"></label>
                    <div class="col-md-8 col-sm-12">
                        <input asp-for="Devamsizlik" class="form-control" disabled />
                        <span asp-validation-for="Devamsizlik" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="DgsDevamsizlik" class="col-md-4 col-sm-12"></label>
                    <div class="col-md-8 col-sm-12">
                        <input asp-for="DgsDevamsizlik" class="form-control" disabled />
                        <span asp-validation-for="DgsDevamsizlik" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="DonemId" class="col-md-4 col-sm-12"></label>
                    <div class="col-md-8 col-sm-12">
                        <select asp-for="DonemId" class="form-control" asp-items="ViewBag.DonemId" disabled>
                        </select>
                        <span asp-validation-for="DonemId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-8 col-sm-12 offset-md-4">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <div class="row">
                                <div class="col-md-6 col-sm-12 py-1">
                                    <button type="submit" class="btn btn-danger btn-block">Sil</button>
                                </div>
                                <div class="col-md-6 col-sm-12 py-1">
                                    <a asp-action="Index" class="btn btn-primary btn-block">Geri Dön</a>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
